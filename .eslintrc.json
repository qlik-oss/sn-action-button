{
  "root": true,
  "env": {
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "arrow-parens": 0,
    "comma-dangle": 0,
    "implicit-arrow-linebreak": 0,
    "max-len": 0,
    "no-plusplus": 0,
    "no-bitwise": 0,
    "no-param-reassign": 0,
    "no-restricted-globals": 0,
    "no-unused-expressions": 0,
    "object-curly-newline": 0,
    "operator-linebreak": 0,
    "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
    "no-nested-ternary": 0
  },
  "overrides": [
    {
      "files": ["**/*.spec.js"],
      "env": {
        "browser": false,
        "node": true,
        "mocha": true
      },
      "globals": {
        "expect": false,
        "page": false,
        "jest": false,
        "window": false
      },
      "plugins": ["prettier", "mocha"],
      "rules": {
        "mocha/no-exclusive-tests": "error"
      }
    }
  ]
}
